@model AdoptifySystem.User_
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h1>Change Password</h1>
    </div>
 
        @using (Html.BeginForm())
        {
            
            <label for="uname"><strong>Current Password </strong></label>
            <input type="password" class="form-control" id="Current Password " name="Current_Password " placeholder="Current Password " required ="required">
            <label for="uname"><strong>New Password</strong></label>
            <input type="password" class="form-control" id="New Password" name="New_Password" placeholder="New Password" required ="required">
            <label for="uname"><strong>Confirm New Password</strong></label>
            <input type="password" class="form-control" id="Confirm New Password" name="Confirm_New _Password" placeholder="Confirm New Password" required ="required">
            
        }
    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-primary glyphicon glyphicon-remove-sign" })
    </div>
