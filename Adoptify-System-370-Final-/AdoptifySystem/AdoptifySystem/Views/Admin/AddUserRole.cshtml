@model AdoptifySystem.Role_

@{
    ViewBag.Title = "Add User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <br />
    <div class="form-horizontal card border-primary" style="width:60%">

        <h2 class="table-primary">Add User Role</h2>
        <hr />
        <div class="form-group">
            <label class="form-control-label">Role Name</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="Rolename" name="Role_Name" placeholder="Role Name">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "SearchUserRole", null, new { @class = "btn btn-warning" })
                <button type="submit" name="button" value="Save" class=" btn btn-success float-right">Save</button>
            </div>
        </div>
    </div>
}