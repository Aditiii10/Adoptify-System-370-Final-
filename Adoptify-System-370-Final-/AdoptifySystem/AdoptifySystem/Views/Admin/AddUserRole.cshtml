@model AdoptifySystem.Models.Role_

@{
    ViewBag.Title = "Add User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add User Role</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <h4 style="color:red">@ViewBag.errormessage</h4>
    <hr />
    <div class="form-group">
        <label class="form-control-label">Role Name</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Rolename" name="Role_Name" placeholder="Role Name">
            <span class=" btn-info" data-container="body" data-toggle="popover" data-placement="right" data-content="Enter the User Role that is needed for User" data-original-title="User Role Name">Click Me</span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Cancel", "SearchUserRole", null, new { @class = "btn btn-warning" })
            <button type="submit" name="button" value="Save" class=" btn btn-success float-right">Save</button>
        </div>
    </div>
</div>
}
