@model AdoptifySystem.Models.nickeymodel.Innovation
@{
    ViewBag.Title = "AddEmployee";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

    <style>
        .row {
            display: flex;
        }

        .column {
            flex: 50%;
        }
    </style>
</head>

@using (Html.BeginForm())
{
    <div>
        <h1 align="center">Add Employee</h1>
    </div>
    <div class="row">

        <div class="column">
            @Html.AntiForgeryToken()
            <div>
                <div class="col-sm-10" style='background-color: #2ba6cb'><h2 style="color:white;">Employee Details</h2></div>

            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label>Title </label>

                <div class="col-md-10">
                    <select>
                        @if (Model != null)
                        {
                            foreach (var item in Model.Titles)
                            {
                                <option>@item.Title_Description</option>
                            }

                        }



                    </select>

                </div>
            </div>



            <div class="form-group">
                <label>Employee Type</label>

                <div class="col-md-10">
                    @*<select>
                            @if (Model != null)
                            {
                                foreach (var item in Model.empTypes)
                                {
                                    <option>@item.Emp_Type_Name</option>
                                }
                            }

                        </select>*@

                </div>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="Male">
                <label class="custom-control-label" for="customRadio1">Male</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="Female">
                <label class="custom-control-label" for="customRadio2">Female</label>
            </div>
            <div class="form-group">

                <label>Name </label>

                <div class="col-md-10">


                    <input name="Name" type="text" />


                </div>
            </div>

            <div class="form-group">
                <label>Surname </label>

                <div class="col-md-10">


                    <input name="Surname " type="text" />


                </div>
            </div>

            <div class="form-group">
                <label>Contact Details </label>

                <div class="col-md-10">

                    <input name="Surname " type="number" />

                </div>
            </div>

            <div class="form-group">
                <label>ID/Passport Number </label>

                <div class="col-md-10">

                    <input name="ID " type="text" />

                </div>
            </div>

            <div class="form-group">
                <label>Email Address </label>

                <div class="col-md-10">

                    <input name="Employee_Email" type="text" />

                </div>
            </div>

            <div class="form-group">
                <label>Date Of Employment</label>

                <div class="col-md-10">
                    <input name="Date_Of_Employment" type="number" />

                </div>
            </div>

            <div class="form-group">
                <label>Contract</label>

                <div class="col-md-10">
                    <input type="file" name="FileName" id="FileName" class="formcontrol" />
                    @Html.ValidationMessageFor(model => model.empList, "", new
                    {
                        @class
    = "text-danger"
                    })
                </div>
            </div>
            <div class="form-group">
                <label>Username</label>

                <div class="col-md-10">
                    <input name="Username" type="number" />

                </div>
            </div>

            <div class="form-group">
                <label>Password</label>

                <div class="col-md-10">
                    <input name="Date_Of_Employment" type="number" />

                </div>
            </div>

            <div class="form-group">
                <label>Verify Password</label>

                <div class="col-md-10">
                    <input name="Date_Of_Employment" type="number" />

                </div>
            </div>

        </div>
    </div>


    <div class="column">
        <div>
            <div class="col-sm-10" style='background-color: #2ba6cb'><h style="color:white;">Assign User Role </h></div>

        </div>
        <label>Please Select Level Of Accessiblity</label>

        <div class="custom-control custom-checkbox">

            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Unlimited Access To All Subsystems</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Animal</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Adoption </label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Admin</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Foster Care</label>
        </div>


        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Veterianarian</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Employee</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Donations</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Stock</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Event</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Kennel</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Volunteer</label>
        </div>

        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" id="defaultUnchecked">
            <label class="custom-control-label" for="defaultUnchecked">Report</label>
        </div>



    </div>





    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
            <input type="reset" value="Reset" class="btn" />
            <button type="button" name="button" class="btn btn-warning">Cancel</button>
        </div>
    </div>
}










































