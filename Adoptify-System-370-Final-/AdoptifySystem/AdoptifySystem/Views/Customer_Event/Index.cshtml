@model IEnumerable<AdoptifySystem.Models.Customer_Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Customer Surname
        </th>
        <th>
            Customer Email
        </th>
        <th>
            Number of Tickets
        </th>
        <th>
            Date
        </th>
        <th>
            Total
        </th>
        <th>
            Event Name
        </th>
        <th>
            Payment Type
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_Event_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_Event_Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer_Event_Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number_of_tickects)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketFee_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TicketFee_Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Event_.Event_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment_Type.Payment_Type_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Customer_Event_ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.Customer_Event_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Customer_Event_ID })
        </td>
    </tr>
}

</table>
