@model IEnumerable<AdoptifySystem.Models.Title>

@{
    ViewBag.Title = "Index";
}

<h2>Title List</h2>

<p>
    @Html.ActionLink("Add New", "Create", "Titles", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title_Description)    @*gets name*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title_Description)      @*gets value*@
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", "Titles", new { id = item.Title_ID }, new { @class = "btn btn-danger", style = "float:right" })
            @Html.ActionLink("More Info", "Details", "Titles", new { id = item.Title_ID }, new { @class = "btn btn-primary", style = "float:right" })
            @Html.ActionLink("Update", "Edit", "Titles", new { id = item.Title_ID }, new { @class = "btn btn-success", style = "float:right" })
        </td>
    </tr>
}

</table>
