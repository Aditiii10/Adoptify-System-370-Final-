@model AdoptifySystem.Volunteer_Work_Type

@{
    ViewBag.Title = "Create";
}

<<div id="main">
    <br />
    <div class="" style="text-align:center;padding-left:120px">
        <div class="col-sm-10" style='background-color: #2ba6cb'>
            <h1 style="color:white"> Add Volunteer Work Type</h1>
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Vol_WorkType_Name, htmlAttributes: new { @class = "control-label col-md-2", style = "display:inline;", @Title = "Enter Volunteer Work Type Name" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Vol_WorkType_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Volunteer Work Type Name" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.Vol_WorkType_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Vol_WorkType_Description, htmlAttributes: new { @class = "control-label col-md-2", style = "display:inline;", @Title = "Enter Volunteer Work Type Description" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Vol_WorkType_Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Volunteer Work Type Description" } })
                    <br />
                    @Html.ValidationMessageFor(model => model.Vol_WorkType_Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    @Html.ActionLink("Back to List", "Index", "Volunteer_Work_Type", new { @class = "btn btn-primary", style = "float:right", @Title = "Click to go Back" })
                    <input type="submit" value="Save" class="btn btn-success" style="float:right" title="Click to Save Volunteer Work Type" />
                    <br />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}