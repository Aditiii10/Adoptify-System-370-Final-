@model IEnumerable<AdoptifySystem.Models.Volunteer_Work_Type>

@{
    ViewBag.Title = "Index";
}

    <div id="main">
        <br />
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style="color:white">Volunteer Work Type List</h1>
            </div>
        </div>

        @using (Html.BeginForm("SearchVolunteerWorkType", "Volunteer_Work_Type", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-5">
                    <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                    @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button type="submit" value="Search" title="Click to Search Volunteer Work Type" class="btn btn-primary">Search</button>
                </div>
            </div>
            <br />
        }

        <p>
            @Html.ActionLink("Add New", "Create", "Volunteer_Work_Type", new { @class = "btn btn-success", @Title = "Click to Add Volunteer Work Type" })
            @using (Html.BeginForm("Index", "Volunteer_Work_Type", FormMethod.Get))
            {

            }
        </p>


        <table class="table-bordered table">
            <tr class="table-primary">
                <th>
                    @Html.DisplayNameFor(model => model.Vol_WorkType_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vol_WorkType_Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_WorkType_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_WorkType_Description)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Edit", "Volunteer_Work_Type", new { id = item.Vol_WorkType_ID }, new { @class = "btn btn-success", @Title = "Click to Update Volunteer Work Type" })
                        @Html.ActionLink("More Info", "Details", "Volunteer_Work_Type", new { id = item.Vol_WorkType_ID }, new { @class = "btn btn-primary", @Title = "Click to View Volunteer Work Type Details" })
                        @Html.ActionLink("Delete", "Delete", "Volunteer_Work_Type", new { id = item.Vol_WorkType_ID }, new { @class = "btn btn-danger", @Title = "Click to Delete Volunteer Work Type" })
                    </td>
                </tr>
            }

        </table>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <br />
                @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-warning", style = "float:right", @Title = "Click to go to Home Page" })
                <br />
            </div>
        </div>
        </div>
