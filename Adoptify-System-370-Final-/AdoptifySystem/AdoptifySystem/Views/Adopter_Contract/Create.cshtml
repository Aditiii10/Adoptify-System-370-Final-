@model AdoptifySystem.Models.Adopter_Contract

@{
    ViewBag.Title = "Create";
}

<h2>Adopter Contract</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Adopter_ID, "Adopter", htmlAttributes: new { @class = "control-label col-md-2", @Title = "Select Adopter" })
        <div class="col-md-10">
            @Html.DropDownList("Adopter_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Adopter_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Electronic_Contract, htmlAttributes: new { @class = "control-label col-md-2", @Title = "Enter Electronic Contract Information" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Electronic_Contract, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Electronic Contract Description" } })
            @Html.ValidationMessageFor(model => model.Electronic_Contract, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class=" = " control-label col-md-2" required="required">Please Upload Adopter Documentation</label>
        <div class="col-md-offset-2 col-md-10">
            <input type="file" name="file" class="form-check-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back to List", "Index", "Adopter_Contract", new { @class = "btn btn-primary", style = "float:right", @Title = "Click to go Back" })
            <input type="submit" value="Save" class="btn btn-success" style="float:right" title="Click to Save Adopter Contract" />
            <br />
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
