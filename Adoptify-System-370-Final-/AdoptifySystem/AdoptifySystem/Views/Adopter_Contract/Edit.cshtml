@model AdoptifySystem.Models.Adopter_Contract

@{
    ViewBag.Title = "Edit";
}

    <div id="main">
        <br />
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style="color:white">Update Adopter Contract</h1>
            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Contract_ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Adopter_ID, "Adopter", htmlAttributes: new { @class = "control-label col-md-2", @Title = "Select Adopter" })
                    <div class="col-md-10">
                        @Html.DropDownList("Adopter_ID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Adopter_ID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Electronic_Contract, htmlAttributes: new { @class = "control-label col-md-2", @Title = "Update Electronic Contract Information" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Electronic_Contract, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Electronic_Contract, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class=" = " control-label col-md-2" required="required">Please Upload Adopter Documentation</label>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="file" name="file" class="form-check-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <br />
                        @Html.ActionLink("Back to List", "Index", "Adopter_Contract", new { @class = "btn btn-primary", style = "float:right", @Title = "Click to go Back" })
                        <input type="submit" value="Update" class="btn btn-success" style="float:right" title="Click to Update Adopter Contract Details" />
                        <br />
                    </div>
                </div>
            </div>
        }
        </div>



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
