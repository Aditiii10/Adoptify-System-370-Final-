@model AdoptifySystem.Vet_Appointment_Master

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div id="main">
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style='color:white'>Create Vet Appointment</h1>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Vet Appointment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"  title = "Select Desired Vet">Vet:</label>
            <div class="col-md-10">
                @Html.DropDownList("Vet_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Vet_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" title = "Select Desired Animal">Animal:</label><br />
            <div class="col-md-10">
                @Html.DropDownList("Animal_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Animal_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"  title = "Select Desired Appointment Date">Appointment Date:</label><br />
            <div class="col-md-10">
                <input type="date" name="date" id ="AppointmentDate" required="required" />
            </div> 
        </div>



        <div class="form-group">
            <label class="control-label col-md-2" title = "Select Desired Reason for Appointment">Appointment Reason</label>
            <div class="col-md-10">
                @Html.DropDownList("VetAppReasonsID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VetAppReasonsID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" title = "Write Quick Description as a note for appointment">Description: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" }, required = "required",  placeholder = "Enter Description" , maxlength="200" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back", "Index", "VetAppointment", null, new { @class = "btn btn-primary glyphicon glyphicon-circle-arrow-left", @Title = "Click to go Back" })
                @Html.ActionLink("Refresh", "Create", "VetAppointment", null, new { @class = "btn btn-secondary glyphicon glyphicon-refresh", @Title = "Click to Refresh this page" })
                <input type="submit" value="Create" class="btn pull-right btn-success" style="float:right" title="Click to Save New Vet Appointment" />
            </div>
        </div>
    </div>
        }
    </div>

<script>
     var today = new Date();
    document.getElementById("AppointmentDate").value = today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2);
</script>