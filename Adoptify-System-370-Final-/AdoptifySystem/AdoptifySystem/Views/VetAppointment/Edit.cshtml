@model AdoptifySystem.Vet_Appointment_Master

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div id="main">
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style='color:white'>Edit Vet Appointment</h1>
            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Vet Appointment Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Vet_Appoint_Line_ID)

        <div class="form-group">
            <label class="control-label col-md-2">Vet Name:</label><br />
            <div class="col-md-10">
                @Html.DropDownList("Vet_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Vet_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Appointment Date:</label><br />
            <div class="col-md-10">
                <input type="date" name="date" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Description:</label><br />
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Animal:</label><br />
                <div class="col-md-10">
                    @Html.DropDownList("Animal_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Animal_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Vet Appointment Reasons:</label><br />
                <div class="col-md-10">
                    @Html.DropDownList("VetAppReasonsID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.VetAppReasonsID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Back to List", "Index", "VetAppointment", null, new { @class = "btn btn-primary glyphicon glyphicon-circle-arrow-left" })
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>