@model List<HomeCheckReport>

@{
    ViewBag.Title = "HomeCheckReportHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <div class="col-sm-10" style='background-color: #2ba6cb'>
            <h1 style='color:white'>HomeCheck Report History</h1>
        </div>
    </div>
    <hr />
    @*<p>
        @using (Html.BeginForm("SearchAdoption", "Adoptions", FormMethod.Get))
        {
            <b>Search by:</b>@Html.RadioButton("Searchby", "Animal_Name", true) <text>Animal Name</text>
            @Html.RadioButton("Searchby", "Adoptor_Name")<text> Adoptor Name</text><br />
            @Html.TextBox("search")<input type="submit" value="Search" ? />
        }
    </p>*@
    @using (Html.BeginForm("HomeCheckReportHistory", "Adoptions", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-5">
                <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" value="Search" class="btn btn-primary">Search</button>
            </div>
        </div>
    }
    <br />
    <table class="table-bordered table">
        <tr class="table-primary">
            <th>
                Adopter Details
            </th>
            <th>
                Animal Details
            </th>
            <th>
                Home Check Approval
            </th>


        </tr>


        @if (Model == null)
        {
            <tr>
                <td colspan="8">
                    No results found
                </td>
            </tr>
        }
        else
        {
            foreach (HomeCheckReport item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adoption.Adopter.Adopter_Name)  @Html.DisplayFor(modelItem => item.Adoption.Adopter.Adopter_Surname), @Html.DisplayFor(modelItem => item.Adoption.Adopter.Adopter_CellNumber), Adress: @Html.DisplayFor(modelItem => item.Adoption.Adopter.Adopter_Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adoption.Animal.Animal_Name) , @Html.DisplayFor(modelItem => item.Adoption.Animal.Animal_Type.Animal_Type_Name), @Html.DisplayFor(modelItem => item.Adoption.Animal.Animal_Breed.Animal_Breed_Name), @Html.DisplayFor(modelItem => item.Adoption.Animal.Animal_Age) years old
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.HomeCheckStatus)
                    </td>

                    @*<td>
                            <button class="btn"><i class="fa fa-home"></i></button>
                            <input type="submit" value="Create" class="btn pull-right btn-success " />
                        </td>*@
                </tr>
            }
        }

    </table>
    @Html.ActionLink("Cancel", "Index", "Adoptions", null, new { @class = "btn btn-warning glyphicon glyphicon-remove-sign", @Title = "Click to go Back to Adoption Home" })
    @Html.ActionLink("Refresh", "AdoptionPaymentIndex", "Adoptions", null, new { @class = "btn btn-primary glyphicon glyphicon-refresh", @Title = "Click to Refresh this page" })
</div>