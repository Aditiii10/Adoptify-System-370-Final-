@model IEnumerable<AdoptifySystem.HomeCheckReport>

@{
    ViewBag.Title = "HomeCheckReportHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h1 style="color:white">HomeCheck Report History</h1>
    </div>
    <h1>@ViewBag.errormessage</h1>

    @using (Html.BeginForm("HomeCheckReportHistory", "Adoptions", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-5">
                <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" value="Search" class="btn btn-primary">Search</button>
            </div>
        </div>
    }
    <table class="table">
        <tr>
            <th>
                Adopter Details
            </th>
            <th>
                Animal Details
            </th>
            <th>
                Adopter's Home Address
            </th>
            <th>
                Home Check Status
            </th>
            <th>
                HomeCheck Report Doc
            </th>

            <th>
                Download HomeCheck Reports
            </th>
        </tr>

        
        @if (Model == null)
        {
            <tr>
                <td colspan="8">
                    No results found
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Adopter.Adopter_Name)  @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Adopter.Adopter_Surname), @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Adopter.Adopter_Address), @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Adopter.Adopter_CellNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Animal.Animal_Name) , @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Animal.Animal_Type.Animal_Type_Name), @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Animal.Animal_Breed.Animal_Breed_Name), @Html.DisplayFor(modelItem => item.HomeCheck.Adoption.Animal.Animal_Age) years old
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.HomeCheckStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HCDoc)
        </td>

        <td>
            <button class="btn"><i class="fa fa-home"></i></button>
            <input type="submit" value="Create" class="btn pull-right btn-success " />
        </td>
    </tr>
           }
        }

    </table>

</div>