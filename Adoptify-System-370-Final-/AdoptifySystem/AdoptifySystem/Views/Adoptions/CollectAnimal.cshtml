@model AdoptifySystem.Adoption

@{
    ViewBag.Title = "CollectAnimal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <div class="col-sm-10" style='background-color: #2ba6cb'>
            <h1 style="color:white">Collect Animal</h1></div>
        </div>
       
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Adoption Details</h4>
                <hr />
                <div>
                    <label>Adoption ID: </label> <label style="color:red">@ViewBag.ID</label>
                </div>
                <div>
                    <label>Adopter's Details: </label> <label style="color:red">@ViewBag.IDName</label>
                </div>
                <div>
                    <label>Animal Details: </label> <label style="color:red">@ViewBag.IDet</label>
                </div>
                <hr />

                <div class="form-group">
                    <label class="control-label col-md-2" title = "Select Collection Date">Collection Date: </label>
                    <div class="col-md-10">
                        <input required type="date" id="CollectDate" name="date" />
                        </div>
                    </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Back to List", "CollectionIndex", "Adoptions", null, new { @class = "btn btn-primary glyphicon glyphicon-circle-arrow-left", @Title = "Click to go Back" })
                        @Html.ActionLink("Refresh", "CollectAnimal", "Adoptions", null, new { @class = "btn btn-secondary glyphicon glyphicon-refresh", @Title = "Click to Refresh this page" })
                        <input type="submit" value="Collect" class="btn btn-success glyphicon glyphicon-exclamation-sign" style="float:right" title="Click to Collect Animal" />
                    </div>
                </div>
            </div>
        }

        <div>
            
        </div>
    </div>
<script>
    var today = new Date();
    document.getElementById("CollectDate").value = today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2);
</script>