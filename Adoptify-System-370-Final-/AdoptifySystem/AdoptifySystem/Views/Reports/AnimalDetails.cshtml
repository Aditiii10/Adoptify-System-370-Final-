<h2>Animal Details</h2>


<div class="criteria">
    <div class="btn-group">
        <button type="button" id="btnTo" value="Generate" class="btn btn-primary">Generate</button>
        <button type="button" class="btn btn-dark" id="btnPrint" style="float:right" onclick="printContent('Appointment');">Print</button>
        @*<button type="button" class="btn btn-dark" onclick="window.location.href(@Url.Action("ExportAnimalDetails","Reports"))">Export PDF</button>*@
    </div>

</div>
<hr style="background-color:dodgerblue" />
<div id="Appointment" style="border-radius:20px;background-color:rgb(0, 138, 255)">
    <h2 style="color:white"><span style="text-align:center">Outstanding Neutered Animals</span></h2>
    <table class="table table-striped table-dark" id="tblAdded">
        <thead>
            <tr>
                <th>Entry Date</th>
                <th>Animal Name</th>
                <th>Animal Type</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Castration</th>
                <th>Sterilazation</th>
                <th>Kennel Name</th>
            </tr>
        </thead>
        <tbody id="table1">
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnPrint").attr("disabled", true);
            $('#btnTo').click(function () {
                $.ajax({
                    url: '/Reports/AnimalDetails1',
                    type: "Post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    data: "",
                    success: function (data) {
                        $('#tblAdded').find("tbody").empty();
                        console.log(data.aName);
                        var i = 0;
                        var length = data.aName.length;
                        while (i < length) {

                            var rowS = "<tr><td>" + data.aDate[i] + "</td><td>" + data.aName[i] + "</td><td>" + data.aType[i] + "</td><td>" + + data.aAge[i] + "</td><td>" + + data.aGender[i] + "</td><td>" +  data.aCast[i] + "</td><td>" + data.aSter[i] + "</td><td>" + data.aKennel[i] + "</td></tr>";
                            i++
                            $("#table1").append(rowS);
                        }
                        $("#btnPrint").attr("disabled", false);
                    },
                    error: function (xhr, ajaxoptions, thrownError) {
                        alert(thrownError);
                    }
                });
            });
        });
