
@{
    ViewBag.Title = "ComServe";
}

<h2>Community Service Report</h2>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend" style="color:dodgerblue;">
            <span class="input-group-text" id="basic-text1" style="background-color:dodgerblue;">
                <i class="fas fa-search text-white"
                   aria-hidden="true"></i>
            </span>
        </div>
        <input type="text" id="searchInput" class="form-control" placeholder="Search Volunteer" aria-label="Recipient's username" aria-describedby="button-addon2" style="background-color: #494c49; border-bottom: none !important;color:white">
        <input type="button" class="btn btn-success" value="Generate" id="btnGenerate" />
    </div>
</div>
<div  id="idx1" class="col-md-12" style="border: 1px solid black">
    <div id="ComServe">
        <h3><b>Community Service Report</b></h3>
        <hr style="background-color:dodgerblue" />
        <div style="border-radius:20px;border: 1px solid black;width:400px;margin-left:350px">
            <br />
            <div style="padding-left:50px" class="form-group">
                <label>Volunteer Name:</label><input class="form-control" style="border-radius:15px" disabled id="VolName" /><br />
                <label>Volunteer Surname:</label><input class="form-control" style="border-radius:15px" disabled id="VolSurname" /><br />
                <label>Contact No:</label><input class="form-control" style="border-radius:15px" disabled id="VolContact" /><br />
                <label>Email Address:</label><input class="form-control" style="border-radius:15px" disabled id="VolEmail" /><br />
                <input class="form-control" style="border-radius:15px;display:none" disabled id="VolID" />
            </div>
            <br />
        </div>
        <h2><b>Community Service Report</b></h2>
        <br />
        <table class="table table-striped  table-responsive-lg table-dark" id="tblSearchedVol">
            <thead>
                <tr>
                    <th>Date</th>
                    <th> Start Time</th>
                    <th> End Time</th>
                    <th> Total Hours</th>
                </tr>
            </thead>
            <tbody id="tblSearchedRows">
            </tbody>

        </table>
        <br />
        <div style="float:right">
            <h3 style="color:dodgerblue" id="Total">Total Hours Worked: 07:00:00<br /></h3>
            <hr style="background-color:black" />

        </div>
    </div>
    <div class="btn">
        <button type="button" class="btn btn-dark" id="btnBack"> Reset</button>
        <button type="button" class="btn btn-success" id="btnPrint" onclick="printContent('ComServe');"> Print</button>
    </div>

</div>


@section Scripts{
    <!--Scripts-->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript">

    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript">

    </script>
    <script type="text/javascript" src="https://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js">

    </script>
    
    <script>
        $(document).ready(function () {
            $("#btnGenerate").attr("disabled", true);
            $("#searchInput").attr("disabled", false);
            $("#searchInput").val();
            $('#idx1').hide();
            $('#btnBack').click(function () {
                $('#idx1').hide();
                $("#btnGenerate").attr("disabled", true);
                $("#searchInput").val('');
                $("#searchInput").attr("disabled", false);
                $("#VolID").val('');
                $("#VolName").val('');
                $("#VolSurname").val('');
                $("#VolContact").val('');
                $("#VolEmail").val('');
            });
        });

    </script>
    <script type="text/javascript">
        $(function () {
            $("#searchInput").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: '/Reports/AutoComplete/',
                        data: "{ 'prefix': '" + request.term + "'}",
                        dataType: "json",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(response.responseText);
                        },
                        failure: function (response) {
                            alert(response.responseText);
                        }
                    });
                },
                select: function (e, i) {
                    $("#VolID").val(i.item.label4);
                    $("#VolName").val(i.item.label);
                    $("#VolSurname").val(i.item.label1);
                    $("#VolContact").val(i.item.label2);
                    $("#VolEmail").val(i.item.label3);
                    $('#searchInput').val('');
                    $("#btnGenerate").attr("disabled", false);
                    $("#searchInput").attr("disabled", true);
                    return i;
                },
                minLength: 1
            });
            $("#btnGenerate").click(function () {
                var ID = $('#VolID').val();
                $.ajax({
                    url: "/Reports/ComServe1",
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ "ID": ID }),
                    success: function (data) {
                        $('#tblSearchedVol').find("tbody").empty();
                        var i = 0; debugger
                        c = [ "02:00:00","01:00:00" ,"03:00:00", "01:00:00"];
                        var length = data.dWork.length;debugger
                        while (i < length)
                        {
                            var rowS = "<tr><td>" + data.dWork[i] + "</td><td>" + data.dStart[i] + "</td><td>" + data.dEnd[i] + "</td><td>" + c[i] + "</td></tr>";
                            i++
                            $("#tblSearchedRows").append(rowS); debugger
                        }
                        $('#idx1').show();
                        $('#searchInput').val('');
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        alert("failed");
                    }
                });
            });
        });
    </script>
    <script>
        function printContent(el) {
            var retorepage = $('body').html();
            var printcontent = $('#' + el).clone();
            $('body').empty().html(printcontent);
            window.print();
            $('body').html(retorepage);
        }
    </script>
}





