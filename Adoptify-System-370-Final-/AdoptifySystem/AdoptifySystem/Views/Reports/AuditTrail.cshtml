
@{
    ViewBag.Title = "AuditTrail1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Audit Trail Report</h2>

<div class="criteria">
    <label>Date</label>
    <input type="date" id="Date" class="btn btn-outline-dark" />
    <br />
    <input type="button" id="btnTo" value="Generate" class="btn btn-primary" />
</div>
<hr />

<div class="container">
    <h2>Audit Trail Report</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Audit ID</th>
                <th>Transaction Type</th>
                <th>Critical Date</th>
                <th>Username</th>
            </tr>
        </thead>
        <tbody id="tAppoint">
            <tr>
            </tr>
        </tbody>
    </table>
</div>

<div id="idx1">
    <table class="table table-striped table-dark" id="tblAdded">

        <thead>
            <tr>
                <th>Audit ID</th>
                <th>Transaction Type</th>
                <th>Critical Date</th>
                <th>Username</th>
            </tr>
        </thead>
        <tbody class="Added" id="tblAdded">
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#idx1').hide();

            $('#btnTo').click(function () {
                var Date = $('#Date').val();
                $.ajax({
                    url: '/Reports/AuditTrail',
                    type: "Post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify({ "Date": Date }),
                    success: function (data) {

                        $('#tblAdded').find("tbody").empty();
                        var i = 0;
                        var length = data.aID.length;
                        //debugger
                        console.log(data.aID[0]);
                        console.log(data);

                        var rowS = "<tr><td>" + data.aID[0] + "</td><td>" + data.tType[i] + "</td><td>" + data.cDate[i] + "</td><td>" + data.uName[i] +  "</td></tr>";
                        console.log(rowS);
                        $("#tAppoint").append(rowS);

                        $("idx1").show();

                    },
                    error: function (xhr, ajaxoptions, thrownError) {
                        alert(thrownError);
                    }
                });
            });
        });
    </script>

}

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>



