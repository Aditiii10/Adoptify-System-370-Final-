
@{
    ViewBag.Title = "AuditTrail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Audit Trail Report</h2>

<div class="criteria">
    <div class="btn-group">
        <button type="button" id="btnTo" value="Generate" class="btn btn-primary">Generate</button>
        <button type="button" class="btn btn-dark" id="btnPrint" style="float:right" onclick="printContent('Appointment');">Print</button>
    </div>

</div>
<hr style="background-color:dodgerblue" />
<div id="Appointment" style="border-radius:20px;background-color:rgb(0, 138, 255)">
    <h2 style="color:white"><span style="text-align:center">Audit Trail Report for Past Week</span></h2>
    <table class="table table-striped table-dark" id="tblAdded">
        <thead>
            <tr>
                <th>Transaction Type</th>
                <th>Critical Date</th>
                <th>Employee ID Number</th>
                <th>Employee Name</th>
                <th>Employee Surname</th>
            </tr>
        </thead>
        <tbody id="table1">
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnPrint").attr("disabled", true);
            $("#Appointment").hide();
            $('#btnTo').click(function () {
                $.ajax({
                    url: '/Reports/AuditTrail1',
                    type: "Post",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    data: "",
                    success: function (data) {
                        $('#tblAdded').find("tbody").empty();
                        console.log(data.eName);
                        var i = 0;
                        var length = data.eName.length;
                        while (i < length) {

                            var rowS = "<tr><td>" + data.tType[i] + "</td><td>" + data. cDate[i] + "</td><td>" + data.eID [i] + "</td><td>" + data.eName[i] + "</td><td>" + data.eSurname[i] + "</td></tr>";
                            i++
                            $("#table1").append(rowS);
                        }
                        $("#btnPrint").attr("disabled", false);
                        $("#Appointment").show();
                    },
                    error: function (xhr, ajaxoptions, thrownError) {
                        alert(thrownError);
                    }
                });
            });
        });
