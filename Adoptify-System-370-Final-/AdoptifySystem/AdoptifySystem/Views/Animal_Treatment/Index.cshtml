@model IEnumerable<AdoptifySystem.Animal_Treatment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <div class="col-sm-10" style='background-color: #2ba6cb'>
            <h1 style="color:white">Animal Treatment Information</h1>
        </div>
    </div>

    <div class="newButton">
        @Html.ActionLink("Add Animal Treatment", "Create", "Animal_Treatment", null, new { @class = "btn btn-success 	glyphicon glyphicon-plus" , @Title = "Click to Add New Animal Treatment"})
    </div>
    <p>
        @using (Html.BeginForm("Index", "Animal_Treatment", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-5">
                    <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                    @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button type="submit" value="Search" class="btn btn-primary">Search</button>
                </div>
            </div>

            @*<b>Search by:</b>@Html.RadioButton("Searchby", "Vet_Name", true) <text>Vet Name</text>
                @Html.RadioButton("Searchby", "Vet_Address")<text> Vet Address</text><br />
                @Html.TextBox("search")<input type="submit" value="Search" ? />*@
        }
    </p>
    <br />
    <table class="table-bordered table">
        <tr class="table-primary">
        <th>
        Animal
        </th>
        <th>
        Treatment Start Date
        </th>
        <th>
        Treatment End Date
        </th>
        <th>
        Treatment Quantity (kg/g)
        </th>
        <th>
        Treatment Regularity
        </th>
        <th>
        Treatment Name
        </th>
        <th>
        Treatment Cost (R)
        </th>
        <th>
        Comment
        </th>
        <th>
        Action
        </th>
        </tr>

        @if (Model == null)
        {
            <tr>
                <td colspan="8">
                    No Treatment found
                </td>
            </tr>
        }


        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Animal.Animal_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Treat_StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Treat_EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Treat_Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Treat_Regularity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Treat_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Treat_cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>

                    
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Treat_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Treat_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Treat_ID })*@
                        <button class="btn btn-info glyphicon glyphicon-info-sign" data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.Treat_ID)" title = "Click to View Animal Treatment Details"> More Info</button>
                    </td>
                </tr>


                <div class="modal fade" id="@Html.DisplayFor(modelItem => item.Treat_ID)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header table-primary">
                                <h5 class="modal-title" id="exampleModalLongTitle" style="text-align:center">  @Html.DisplayFor(modelItem => item.Animal.Animal_Name)</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <span class="value">Treatment Start Date:</span> @Html.DisplayFor(modelItem => item.Treat_StartDate) <br />

                                <span class="value">Treatment End Date:</span>@Html.DisplayFor(modelItem => item.Treat_EndDate)<br />
                                <span class="value">Treatment Name:</span>@Html.DisplayFor(modelItem => item.Treat_Name)<br />
                                <span class="value">Quantity (kg/g):</span>@Html.DisplayFor(modelItem => item.Treat_Quantity)<br />

                                <span class="value">Regularity of Treatment:</span>@Html.DisplayFor(modelItem => item.Treat_Regularity)<br />

                                <span class="value">Treatment Cost(R):</span>@Html.DisplayFor(modelItem => item.Treat_cost)<br />
                                <br />
                                <div class="modal-footer">
                                    <div style="position:center">
                                        @Html.ActionLink("Edit", "Edit", "Animal_Treatment", new { id = item.Treat_ID }, new { @class = "btn btn-warning glyphicon glyphicon-pencil", @Title = "Click to go Update Animal Treatment Details" })
                                        @Html.ActionLink("Delete", "Delete", "Animal_Treatment", new { id = item.Treat_ID }, new { @class = "btn btn-danger glyphicon glyphicon-trash", @Title = "Click to go Delete Animal Treatment Details" })
                                    </div>
                                    <button type="button" class="btn btn-primary glyphicon glyphicon-remove" data-dismiss="modal" title="Click to close Animal Treatment View"><i></i>Close</button>
                                </div>
                                    
                                </div>
                            </div>

                    </div>
                </div>

            }
        }

    </table>
    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-warning glyphicon glyphicon-remove-sign" , @Title = "Click to go Back to Home"})
    @Html.ActionLink("Refresh", "Index", "Animal_Treatment", null, new { @class = "btn btn-primary glyphicon glyphicon-refresh", @Title = "Click to Refresh this page" })
</div>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
         $(function () {
            var successMessage = '@TempData["EditMessage"]'
            if (successMessage != '')
                alertify.warning(successMessage);
         });
        $(function () {
            var successMessage = '@TempData["DeleteMessage"]'
            if (successMessage != '')
                alertify.error(successMessage);
        });

        @*function Delete(id) {
            alertify.confirm('Web Api CRUD Operations','Are You Sure to Delete this Record ?',function(){
                window.location.href  = '@Url.Action("Delete","Employee")/'+id;
            },null );
        }*@
    </script>
}