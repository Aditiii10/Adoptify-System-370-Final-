@model AdoptifySystem.Animal_Treatment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div id="main"> 
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style="color:white">Delete Animal Treatment Record</h1>
            </div>
        </div>

        <div class="panel panel-default" style="width:1200px">
            <div class="panel-heading">
                <h3 class="panel-title">Animal Treatment Details</h3>
            </div>

            <h3 style="text-align:center; color:red">Are you sure you want to delete this Veterinarian Details?</h3>
            <div>

                <h4>Animal Treatment</h4>
                <hr />
                <dl class="dl-horizontal">

                    <dt>
                        Animal Name:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Animal.Animal_Name)
                    </dd>
                    <dt>
                        Treat Start Date:
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Treat_StartDate)
                    </dd>

                    <dt>
                        Treat End Date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Treat_EndDate)
                    </dd>

                    <dt>
                        Treat Quantity
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Treat_Quantity)
                    </dd>

                    <dt>
                        Treat Regularity
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Treat_Regularity)
                    </dd>

                    <dt>
                        Treat Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Treat_Name)
                    </dd>

                    <dt>
                        Treat cost
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Treat_cost)
                    </dd>

                    <dt>
                        Comment
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Comment)
                    </dd>


                    <dt>
                        Diagnosis Details
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Mecidal_Card.Diagnosis_Details)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to List", "Index", "Animal_Treatment", null, new { @class = "btn btn-primary glyphicon glyphicon-trash", @Title = "Click to go Back"  })
                <input type="submit" value="Delete" class="btn btn-danger glyphicon glyphicon-trash center-block" onclick="return confirm('Are you sure want to Cancel and Delete This Animal Treatment from the List?')" style="float:right" title="Click to Delete the following Animal Treatment Details"/>
            </div>
                }
            </div>
            </div>
        </div>
