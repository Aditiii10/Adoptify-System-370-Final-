@model AdoptifySystem.Foster_Care_Parent

@{
    ViewBag.Title = "Maintain Foster Care Parent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .column {
        float: left;
        width: 50%;
        padding: 20px;
    }
    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>
<br />
<div class="border-primary card ">
    <h1 class="table-primary">Maintain Foster Care Parent</h1>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.Foster_Parent_ID)
        <h4 style="color:red">@ViewBag.err</h4>
        <hr />
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label>Name:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Foster_Parent_Name" id="FosterParentName" name="Foster_Parent_Name" placeholder="Name">
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="form-group">
                    <label>Surname:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Foster_Parent_Surname" id="FosterParentSurname" name="Foster_Parent_Surname" placeholder="Surname">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label>Address:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Foster_Parent_Address" id="FosterParentAddress" name="Foster_Parent_Address" placeholder="Address">
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="form-group">
                    <label>Cell Number:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Foster_Parent_CellNumber" id="FosterParentCellNumber" name="Foster_Parent_CellNumber" placeholder="Cell Number">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label> Work Number:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Foster_Parent_WorkNumber" id="FosterParentWorkNumber" name="Foster_Parent_WorkNumber" placeholder="Work Number">
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="form-group">
                    <label>Email:</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control" value="@Model.Foster_Parent_Email" id="FosterParentEmail" name="Foster_Parent_Email" placeholder="Email.com">
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label class="form-control-label">ID Number:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Foster_Parent_IDNumber" id="Foster_Parent_IDNumber" name="Foster_Parent_IDNumber" placeholder="ID Number">
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="form-group">
                    <label>Type of Housing:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Type_Of_Housing" id="Type_Of_Housing" name="Type_Of_Housing" placeholder="Type of Housing">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label>Number in Household:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Num_In_Household" id="Num_In_Household" name="Num_In_Household" placeholder="Number in Household">
                    </div>
                </div>
            </div>

            <div class="column">
                <div class="form-group">
                    <label class="">Ownership of Housing:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Ownership_Housing" id="DonationTypeDescription" name="Ownership_Housing" placeholder="Ownership of Housing">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="form-group">
                    <label>Hours Left Alone:</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.Hours_Left_Alone" id="DonationTypename" name="Hours_Left_Alone" placeholder="Hours Left Alone">
                    </div>
                </div>
            </div>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "SearchFosterCareParent", new { @class = "btn btn-warning", @title = "Click to go back to Search Parent screen" })
                <button type="submit" name="button" value="Save" title="Click to update the Following Parent Details" class=" btn btn-success float-right">Save</button>
            </div>
        </div>
    }
</div>