@model IEnumerable<AdoptifySystem.Models.Volunteer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <br />
    <div class="" style="text-align:center;padding-left:120px">
        <div class="col-sm-10" style='background-color: #2ba6cb'>
            <h1 style="color:white">Volunteer List</h1>
        </div>
    </div>


    @using (Html.BeginForm("SearchVolunteer", "Volunteers", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-5">
                <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" value="Search" title="Click to Search Volunteer" class="btn btn-primary">Search</button>
            </div>
        </div>
        <br />
    }

    <p>
        @Html.ActionLink("Add New", "Create", "Volunteer", new { @class = "btn btn-success", @Title = "Click to Add Volunteer" })
        @using (Html.BeginForm("Index", "Volunteer", FormMethod.Get))
        {

        }
    </p>

    <table class="table table-bordered">
        <tr class="table-primary">
            <th>
                Volunteer Name
            </th>
            <th>
                Volunteer Surname
            </th>
            <th>
                Volunteer Email
            </th>
            <th>
                Volunteer Contact Number
            </th>
            <th>
                Volunteer Address
            </th>
            <th>
                Volunteer Emergency Contact Name
            </th>
            <th>
                Volunteer Emergency Contact Number
            </th>
            <th>
                Title
            </th>
            <th></th>
        </tr>


        @if (Model == null)
        {
            <tr>
                <td colspan="8">
                    No results found
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_Emergency_ContactName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vol_Emergency_ContactNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title.Title_Description)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Edit", "Volunteers", new { id = item.Vol_ID }, new { @class = "btn btn-success", @Title = "Click to Update Volunteer" })
                        @Html.ActionLink("Delete", "Delete", "Volunteers", new { id = item.Vol_ID }, new { @class = "btn btn-danger", @Title = "Click to Delete Volunteer" })
                        <button class="btn btn-info" title="Select to Display Details" data-toggle="modal" data-target="#@item.Vol_ID">More info </button>
                    </td>
                </tr>

                <div class="modal fade" id="@item.Vol_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header table-primary">
                                <h5 class="modal-title" id="exampleModalLongTitle">@item.Vol_Name</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <span class="value">Name:</span>
                                @Html.DisplayFor(modelItem => item.Vol_Name) <br />
                                <span class="value">Surname:</span>
                                @Html.DisplayFor(modelItem => item.Vol_Surname) <br />
                                <span class="value">Email:</span>
                                @Html.DisplayFor(modelItem => item.Vol_Email) <br />
                                <span class="value">Contact Number:</span>
                                @Html.DisplayFor(modelItem => item.Vol_ContactNumber) <br />
                                <span class="value">Address:</span>
                                @Html.DisplayFor(modelItem => item.Vol_Address) <br />
                                <span class="value">Emergency Contact Name:</span>
                                @Html.DisplayFor(modelItem => item.Vol_Emergency_ContactName) <br />
                                <span class="value">Emergency Contact Number:</span>
                                @Html.DisplayFor(modelItem => item.Vol_Emergency_ContactNumber) <br />
                            </div>
                            <div class="modal-footer">

                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                @Html.ActionLink("Update", "Edit", new { id = item.Vol_ID }, new { @style = "color: white", @class = "btn btn-success", @title = "Click to Update Volunteer" })
                            </div>
                        </div>
                    </div>
                </div>

            }
        }

    </table>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-12">
        <br />
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-warning", style = "float:right", @Title = "Click to go to Home Page" })
        <br />
    </div>
</div>


@section scripts{
    <script>
            $(function () {
                var successMessage = '@TempData["SuccessMessage"]'
                if (successMessage != '')
                    alertify.success(successMessage);
            });

            $(function () {
                var successMessage = '@TempData["EditMessage"]'
                if (successMessage != '')
                    alertify.warning(successMessage);
            });

            $(function () {
                var successMessage = '@TempData["DeleteMessage"]'
                if (successMessage != '')
                    alertify.error(successMessage);
            });

             $(function () {
                    var successMessage = '@TempData["DeleteErrorMessage"]'
                    if (successMessage != '')
                        alertify.warning(successMessage);
                 });

    </script>
}
