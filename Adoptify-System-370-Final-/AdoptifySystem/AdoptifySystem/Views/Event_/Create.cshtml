            </div>
        </div>

        <div class="form-group">
            Event Type:
            <div class="col-md-10">
                @Html.DropDownList("Event_Type_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Event_Type_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Tickets Available:
            <div class="col-md-10">
                @Html.EditorFor(model => model.TicketAvailable, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TicketAvailable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
