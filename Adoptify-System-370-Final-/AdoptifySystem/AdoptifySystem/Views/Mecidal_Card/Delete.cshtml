@model AdoptifySystem.Mecidal_Card

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div id="main">
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style="color:white">Delete Medical Card</h1>
            </div>
        </div>

        <div class="panel panel-default" style="width:1200px">
            <div class="panel-heading">
                <h3 class="panel-title">Medical Card Details</h3>
            </div>
            <h3 style="text-align:center; color:red">Are you sure you want to delete this Medical Card?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Vet Appointment Line ID
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Vet_Appoint_Line_ID)
                    </dd>

                    <dt>
                        Diagnosis Details
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Diagnosis_Details)
                    </dd>

                    <dt>
                        Arrival from Vet
                    </dt>

                    <dd>
                        Arrival from Vet
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Next_Appointment_Date_)
                    </dt>

                    <dd>
                        Next Appointment Date
                    </dd>

                    <dt>
                        Animal Treatment
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Animal_Treatment)
                    </dd>

                    <dt>
                        Animal Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Animal.Animal_Name)
                    </dd>

                    <dt>
                        Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Vet_Appointment_Master.Description)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Back to List", "Index", "Mecidal_Card", null, new { @class = "btn btn-primary glyphicon glyphicon-circle-arrow-left" , @Title = "Click to go Back"  })
                        <input type="submit" value="Delete" class="btn btn-danger glyphicon glyphicon-trash center-block" style="float:right" title="Click to Delete the following Vet Appointment Details "  />

                    </div>
                }
            </div>
        </div>
</div>