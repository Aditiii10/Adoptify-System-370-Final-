@model AdoptifySystem.Mecidal_Card

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <div class="col-sm-10" style='background-color: #2ba6cb'>
            <h1 style='color:white'>Edit Medical Card</h1>
        </div>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Medical Card</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label class="control-label col-md-2">Animal:</label>
        <div class="col-md-10">
            @Html.DropDownList("Animal_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Animal_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Daignosis Details:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Diagnosis_Details, new { htmlAttributes = new { @class = "form-control" }, required = "required" })
            @Html.ValidationMessageFor(model => model.Diagnosis_Details, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Vet Appointment:</label>
        <div class="col-md-10">
            @Html.DropDownList("Vet_Appoint_Line_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Vet_Appoint_Line_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Arriaval From Vet Date:</label><br />
        <div class="col-md-10">
            <input type="date" name="date" required="required" />
            </div>
        </div>

    <div class="form-group">
        <label class="control-label col-md-2">Next Appointment Date:</label><br />
        <div class="col-md-10">
            <input type="date" name="date" />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Animal Treatment:</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Animal_Treatment)
                    @Html.ValidationMessageFor(model => model.Animal_Treatment, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Back to List", "Index", "Mecidal_Card", null, new { @class = "btn btn-primary glyphicon glyphicon-circle-arrow-left" })
                <input type="submit" value="Save" class="btn btn-success" style="float:right" />
            </div>
        </div>
    </div>
    }

    <div>

    </div>
</div>

