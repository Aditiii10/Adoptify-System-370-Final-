@model List<AdoptifySystem.Stock_Type>
@{
    ViewBag.Title = "Search Stock Type";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h1>Stock Type List</h1>
    </div>
    <h1>@ViewBag.errormessage</h1>
    @Html.ActionLink("Create New", "AddStockType", null, new { @style = "color: # fff" }, new { @class = "btn btn-success" ,@title="Click to Add Stock Type" })

    @using (Html.BeginForm("SearchStockType", "Stock", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-5">
                <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" value="Search" title="Click to Search Stock Type" class="btn btn-primary">Search</button>
            </div>
        </div>
    }
        <br />
        <table class="table table-bordered">
            <tr class="table-primary">
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Action
                </th>
            </tr>


            @if (Model == null)
            {
                <tr>
                    <td colspan="8">
                        No results found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock_Type_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock_Type_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock_Type_Description)
                        </td>
                        <td>
                            @Html.ActionLink("Maintain Stock Type", "MaintainStockType", new { id = item.Stock_Type_ID }, new { @class = "btn btn-warning" ,@title="Click to Maintian Stock Type" }) |

                            <button class="btn btn-info" title="Select to Display Details" data-toggle="modal" data-target="#@item.Stock_Type_ID">More info </button> 

                        </td>
                    </tr>
                    <div class="modal fade" id="@item.Stock_Type_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header table-primary">
                                    <h5 class="modal-title" id="exampleModalLongTitle">@item.Stock_Type_Name</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <span class="value">ID:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_Type_ID) <br />
                                    <span class="value">Description:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_Type_Description) <br />
                                    <span class="value">Referenced to:</span>
                                    @Html.DisplayFor(modelItem => item.Stocks.Count)<br />
                                </div>
                                <div class="modal-footer">
                                    @Html.ActionLink("Delete", "Deletestocktype", new { id = item.Stock_Type_ID }, new { @class = "btn btn-danger" ,@title="Click to Delete Stock Type" }) |
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    @Html.ActionLink("Maintain", "MaintainStockType", new { id = item.Stock_Type_ID }, new { @style = "color: white", @class = "btn btn-warning" ,@title="Click to Maintian Stock Type" })
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }

        </table>

</div>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["success"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
        $(function () {
            var error = '@TempData["error"]'
            if (error != '')
                alertify.error(error);

        });
        $(function () {
            var exception = '@TempData["exception"]'
            if (exception != '')
                alertify.error(exception);

        });
        $(function () {
            var noresult = '@TempData["noresult"]'
            if (noresult != '')
                alertify.error(noresult);

        });
    </script>
    }
