@model AdoptifySystem.Models.nickeymodel.Flexible

@{
    ViewBag.Title = "Maintain Stock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class=" border-primary card">
    <h2 class="table-primary">Maintain Stock</h2><br />
    @using (Html.BeginForm())
    {
        <input type="text" name="Stock_ID" value="@Model.stock.Stock_ID" hidden />
        <label>Select Stock Type</label><br />
        if (Model.Stock_Types != null)
        {
            <select name="Stock_Type_ID" id="exampleList" class="custom-select" style="width:25%;">
                @foreach (var item in Model.Stock_Types)
                {
                    if (Model.stock.Stock_Type_ID == item.Stock_Type_ID)
                    {
                        <option selected value="@item.Stock_Type_ID">@item.Stock_Type_Name</option>
                    }
                    else
                    {
                        <option value="@item.Stock_Type_ID">@item.Stock_Type_Name</option>

                    }
                }
            </select>
        }
        <br />
        <h1 class="table-primary">Food Detail</h1><br />
        <div class="row" style="margin-left:4px; margin-right:4px;">
            <div class="column" style="width:50%;">
                <h2>Food Packaging Type:</h2>
                <div id="RadioFood_Packaging_Type" class="form-group">
                    @foreach (var item in Model.packaging_Types)
                    {
                        if (Model.stock.Packaging_Type_ID == item.Packaging_Type_ID)
                        {
                            <div class="custom-control custom-radio">
                                <input type="radio" id="customRadio @item.Packaging_Type_ID" name="Packaging_Type_ID" value="@item.Packaging_Type_ID" class="custom-control-input" checked="">
                                <label class="custom-control-label" for="customRadio @item.Packaging_Type_ID">@item.Packaging_Type_Name</label>
                            </div>
                        }
                        else
                        {

                            <div class="custom-control custom-radio">
                                <input type="radio" id="customRadio @item.Packaging_Type_ID" name="Packaging_Type_ID" value="@item.Packaging_Type_ID" class="custom-control-input">
                                <label class="custom-control-label" for="customRadio @item.Packaging_Type_ID">@item.Packaging_Type_Name</label>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="column" style="width:50%;">
                <h2>Unit Type:</h2>
                <div id="RadioUnit_Type" class="form-group">
                    @foreach (var item in Model.unit_Types)
                    {
                        if (Model.stock.Unit_Type_ID == item.Unit_Type_ID)
                        {
                            <div class="custom-control custom-radio">
                                <input type="radio" id="exampleRadios @item.Unit_Type_ID" name="Unit_Type_ID" value="@item.Unit_Type_ID" class="custom-control-input" checked="">
                                <label class="custom-control-label" for="exampleRadios @item.Unit_Type_ID"> @item.Unit_Type_Name</label>
                            </div>
                        }
                        else
                        {

                            <div class="custom-control custom-radio">
                                <input type="radio" id="exampleRadios @item.Unit_Type_ID" name="Unit_Type_ID" value="@item.Unit_Type_ID" class="custom-control-input">
                                <label class="custom-control-label" for="exampleRadios @item.Unit_Type_ID"> @item.Unit_Type_Name</label>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <label for="exampleInputEmail1">Units:</label>
            <input type="number" name="Unit_number" style="width:40%;" value=" @Model.stock.Unit_number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Units">
            <small id="emailHelp" class="hide text-muted">Add size of units here</small>
        </div>
        <h1 class="table-primary">Stock Detail</h1>
        <div class="form-group">
            <label for="exampleInputEmail1">Number of Items:</label>
            <input type="text" name="Stock_Quantity" disabled style="width:50%;" value="@Model.stock.Stock_Quantity" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Number of Items" />
            <small id="emailHelp" class="hide form-text text-muted">This can not be altered.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Description:</label>
            <textarea type="tel" name="Stock_Description" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Stock Description"> @Model.stock.Stock_Description</textarea>
            <small id="emailHelp" class="hide form-text text-muted">Add Description of the Stock</small>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "SearchStock", new { @class = "btn btn-warning" ,@title="Click to go back to Search Stock screen" })
                <button type="submit" name="button" value="Save" title="Click to update the Following Stock Details" class=" btn btn-success float-right">Save</button>
            </div>
        </div>
    }

</div>