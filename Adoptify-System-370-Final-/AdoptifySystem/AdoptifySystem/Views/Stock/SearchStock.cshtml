@model List<AdoptifySystem.Stock>
@{
    ViewBag.Title = "Search Stock";
}
<div id="main">
    <div class="" style="text-align:center;padding-left:120px">
        <h1>Stock List</h1>
    </div>
    <h1>@ViewBag.errormessage</h1>
    @Html.ActionLink("Create New", "AddStock", null, new { @style = "color: # fff" }, new { @class = "btn btn-success" })

    @using (Html.BeginForm("SearchStock", "Stock", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-5">
                <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                @Html.TextBox("search", "", new { @name = "txtSearch", @placeholder = "Search Criteria", @class = "form-control", @autocomplete = "off"    })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" value="Search" class="btn btn-primary">Search</button>
            </div>
        </div>
    }
        <br />
        <table class="table table-bordered">
            <tr class="table-primary">
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Quantity Left
                </th>
                <th>
                    Action
                </th>
            </tr>


            @if (Model == null)
            {
                <tr>
                    <td colspan="8">
                        No results found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_Type.Stock_Type_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_Quantity)
            </td>
            <td>
                @Html.ActionLink("Receive Stock", "ReceiveStock", new { id = item.Stock_ID }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Capture Stock", "CaptureStockTake", new { id = item.Stock_ID }, new { @class = "btn btn-warning" }) |
                <button class="btn btn-info" data-toggle="modal" data-target="#@item.Stock_ID">More info </button>
            </td>
        </tr>
                    <div class="modal fade" id="@item.Stock_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header table-primary">
                                    <h5 class="modal-title" id="exampleModalLongTitle">@item.Stock_Name</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <span class="value">ID:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_ID) <br />
                                    <span class="value">Name:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_Name) <br />
                                    <span class="value">Description:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_Description) <br />
                                    <span class="value">Quantity:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_Quantity) <br />
                                    <span class="value">Stock Type:</span>
                                    @Html.DisplayFor(modelItem => item.Stock_Type.Stock_Type_Name) <br />
                                    <span class="value">Unit Type:</span>
                                    @Html.DisplayFor(modelItem => item.Unit_number)@Html.DisplayFor(modelItem => item.Unit_Type.Unit_Type_Name) <br />
                                    <span class="value">Unit Number:</span>
                                    @Html.DisplayFor(modelItem => item.Unit_number) <br />
                                    <span class="value">Packaging Type:</span>
                                    @Html.DisplayFor(modelItem => item.Packaging_Type.Packaging_Type_Name) <br />
                                </div>
                                <div class="modal-footer">

                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Stock_ID }, new { @class = "btn btn-danger" })
                                    @Html.ActionLink("Maintain", "MaintainStock", new { id = item.Stock_ID }, new { @style = "color: white", @class = "btn btn-warning" })
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }

        </table>
</div>