@model List<AdoptifySystem.Animal_Breed>
@{
    ViewBag.Title = "SearchBreedType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main">
    <div>
        <div class="col-sm-12 table-primary"><h1>Search Animal Breed</h1></div>
    </div>


    <h1>@ViewBag.errormessage</h1>
    <div class="col-sm-10">
        @Html.ActionLink("Create New", "AddBreedType", null, new { @style = "color: # fff" }, new { @class = "btn btn-success" })
    </div>
    @using (Html.BeginForm("SearchBreedType", "Animal", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-5">
                <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                @Html.TextBox("search", "", new { @name = "txtSearch", @placeholder = "Search Criteria" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <button type="submit" value="Search" class="btn btn-primary">Search</button>
            </div>
        </div>
        <br />
        <table class="table table-bordered">
            <tr class="thead-light">

                <th>
                    Animal Breed Name
                </th>
                <th>
                    Animal Breed Description

                </th>
                <th>
                    Animal Type

                </th>
                <th>
                    Action
                </th>
            </tr>

            @if (Model == null)
            {
                <tr>
                    <td colspan="8">
                        No results found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Animal_Breed_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Animal_Breed_Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Animal_Type.Animal_Type_Name)
                        </td>

                        <td>
                            @Html.ActionLink("MaintainBreedType", "MaintainBreedType", new { id = item.Animal_Breed_ID }, new { @class = "btn btn-warning" }) |

                            <button class="btn moreinfo" data-toggle="modal" data-target="#@item.Animal_Breed_ID">More info </button> |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Animal_Breed_ID }, new { @class = "btn btn-danger" }) |
                        </td>
                    </tr>
                    <div class="modal fade" id="@item.Animal_Breed_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">@item.Animal_Breed_Name</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <span class="value">ID:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Breed_ID) <br />
                                    <span class="value">Title:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Breed_Name) <br />
                                    <span class="value">Name:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Breed_Description) <br />
                                    <span class="value">Surname:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Type_ID) <br />
                                    <span class="value">Email:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Type) <br />
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    @Html.ActionLink("MaintainBreedType", "MaintainBreedType", new { id = item.Animal_Breed_ID }, new { @style = "color: white", @class = "btn btn-warning" })
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
        </table>
    }
</div>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
         $(function () {
            var successMessage = '@TempData["EditMessage"]'
            if (successMessage != '')
                alertify.warning(successMessage);
         });
        $(function () {
            var successMessage = '@TempData["DeleteMessage"]'
            if (successMessage != '')
                alertify.error(successMessage);
        });

    </script>
}

