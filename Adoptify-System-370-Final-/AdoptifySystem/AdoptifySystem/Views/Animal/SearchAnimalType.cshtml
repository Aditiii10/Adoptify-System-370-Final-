@model List<AdoptifySystem.Animal_Type>
@{
    ViewBag.Title = "SearchAnimalType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main">
           <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-12 table-primary"><h1>Search Animal Type</h1></div>
        </div>
        <h1>@ViewBag.errormessage</h1>
        <div class="col-md-10">
            @Html.ActionLink("Add Animal Type", "AddAnimalType", null, new { @style = "color: # fff" }, new { @class = "btn btn-success" })
        </div>
        @using (Html.BeginForm("SearchAnimalType", "Animal", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-5">
                    <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                    @Html.TextBox("search", "", new { @name = "txtSearch", @placeholder = "Search Criteria" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button type="submit" value="Search" class="btn btn-primary">Search</button>
                </div>
            </div>
        }
        <br />
        <table class="table table-bordered">
            <tr class="table-primary">

                <th>
                    Name
                </th>
                <th>
                    Animal Selling Price
                </th>
                <th>
                    Action
                </th>
            </tr>

            @if (Model == null)
            {
                <tr>
                    <td colspan="8">
                        No results found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Animal_Type_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "MainatainAnimalType", new { id = item.Animal_Type_ID }, new { @class = "btn btn-warning" }) |

                            <button class="btn btn-info" data-toggle="modal" data-target="#@item.Animal_Type_ID">More info </button> |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Animal_Type_ID }, new { @class = "btn btn-danger" }) |
                        </td>
                    </tr>
                    <div class="modal fade" id="@item.Animal_Type_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">@item.Animal_Type_Name</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <span class="value">ID:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Type_ID) <br />
                                    <span class="value">Name:</span>
                                    @Html.DisplayFor(modelItem => item.Animal_Type_Name) <br />
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    @Html.ActionLink("Maintain", "MainatainAnimalType", new { id = item.Animal_Type_ID }, new { @style = "color: white", @class = "btn btn-warning" })
                                </div>
                            </div>
                        </div>
                    </div>

                }
            }
        </table>

</div>

    @section scripts{
        <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });
         $(function () {
            var successMessage = '@TempData["EditMessage"]'
            if (successMessage != '')
                alertify.warning(successMessage);
         });
        $(function () {
            var successMessage = '@TempData["DeleteMessage"]'
            if (successMessage != '')
                alertify.error(successMessage);
        });

        </script>
    }
   





