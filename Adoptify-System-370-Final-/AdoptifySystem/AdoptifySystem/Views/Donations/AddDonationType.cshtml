@model AdoptifySystem.Donation_Type
@{
    ViewBag.Title = "Add Donation Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
    <div class="border-primary card mb-3">
        <h1 class="table-primary">Add Donation Type</h1>
            <div class="form-horizontal">
                <h4 style="color:red">@ViewBag.errormessage</h4>
                <hr />
                <div class="form-group">
                    <label>Donation Type Name</label>
                    <div class="col-md-5">
                        <input type="text" class="form-control" id="Donation_Type_Name" name="Donation_Type_Name" placeholder="Donation Type Name">
                    </div>
                </div>

                <div class="form-group">
                    <label>Donation Type Description</label>
                    <div class="col-md-5">
                        <textarea type="text" class="form-control" id="Donation_Type_Description" name="Donation_Type_Description" placeholder="Donation Type Description"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Cancel", "SearchDonationType", null, new { @class = "btn btn-warning" ,@title="Click to go back to Search Donation Type screen" })
                        <button type="submit" name="button" value="Save" onclick="Save()" title="Click to Add the Following Donation Type Details" class=" btn btn-success float-right">Save</button>
                    </div>
                </div>
            </div>
        </div>
<script>
               function Save() {

                var Donation_Type_Name = document.getElementById("Donation_Type_Name");
                var Donation_Type_Description = document.getElementById("Donation_Type_Description");


                var isvalid = true;

                if (Donation_Type_Name.value == "") {
                    //first remove
                    Donation_Type_Name.classList.remove("is-valid");
                    //then add the class you want
                    Donation_Type_Name.classList.add("is-invalid");
                    isvalid = false;
                } else {
                    //first remove
                    Donation_Type_Name.classList.remove("is-invalid");
                    //then add the class you want
                    Donation_Type_Name.classList.add("is-valid");
                   }
                   
                if (Donation_Type_Description.value == "") {
                    //first remove
                    Donation_Type_Description.classList.remove("is-valid");
                    //then add the class you want
                    Donation_Type_Description.classList.add("is-invalid");
                    isvalid = false;
                } else {
                    //first remove
                    Donation_Type_Description.classList.remove("is-invalid");
                    //then add the class you want
                    Donation_Type_Description.classList.add("is-valid");
                }
                if (isvalid) {

                    var formData = new FormData();

                    formData.append("Donation_Type_Name", Donation_Type_Name.value );
                    formData.append("Donation_Type_Description", Donation_Type_Description.value);

                    $("#loader").show();
                $.ajax(
                    {
                    type: "POST",
                    data: formData,
                    url: "/Donations/AddDonationType",
                        cache: false,
                        contentType: false,
                        processData: false,
                    success: function (d) {
                        $("#loader").hide();
                        isvalid = true;

                    },
                    error: function (error) {
                        $("#loader").hide();
                        isvalid = false;
                       
                }
            });

                    if (isvalid)
                    {
                        location.href = '@Url.Action("SearchDonationType","Donations")';
                    }

                }
            }
</script>