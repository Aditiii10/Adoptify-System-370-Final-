@model IEnumerable<AdoptifySystem.Models.Adopter_Relative>

@{
    ViewBag.Title = "Index";
}

    <div id="main">
        <br />
        <div class="" style="text-align:center;padding-left:120px">
            <div class="col-sm-10" style='background-color: #2ba6cb'>
                <h1 style="color:white">Adopter Relative List</h1>
            </div>
        </div>

        @using (Html.BeginForm("SearchAdopterRelative", "Adopter_Relative", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-5">
                    <h4><span style="font-weight:bold">Search Criteria:<span class="label label-default"></span></span></h4>
                    @Html.TextBox("search", "", new { @name = "txtSearch", @autocomplete = "off", @placeholder = "Search Criteria", @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button type="submit" value="Search" title="Click to Search Adopter Relative" class="btn btn-primary">Search</button>
                </div>
            </div>
            <br />
        }
        <p>
            @Html.ActionLink("Add New", "Create", "Adopter_Relative", new { @class = "btn btn-success", @Title = "Click to Add Adopter Relative" })
            @using (Html.BeginForm("Index", "Adopter_Relative", FormMethod.Get))
            {

            }
        </p>

