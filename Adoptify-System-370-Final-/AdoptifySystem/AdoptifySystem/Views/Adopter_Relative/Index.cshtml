                    <div class="modal-content">
                        <div class="modal-header table-primary">
                            <h5 class="modal-title" id="exampleModalLongTitle">@item.Adopter.Adopter_Name</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <span class="value">Name:</span>
                            @Html.DisplayFor(modelItem => item.Relative_Name) <br />
                            <span class="value">Surname:</span>
                            @Html.DisplayFor(modelItem => item.Relative_Surname) <br />
                            <span class="value">Email:</span>
                            @Html.DisplayFor(modelItem => item.Relative_Email) <br />
                            <span class="value">Contact Number:</span>
                            @Html.DisplayFor(modelItem => item.Relative_Cell) <br />
                            <span class="value">Address:</span>
                            @Html.DisplayFor(modelItem => item.Relationship) <br />                            
                        </div>
                        <div class="modal-footer">

                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            @Html.ActionLink("Update", "Edit", new { id = item.Relative_ID }, new { @style = "color: white", @class = "btn btn-success", @title = "Click to Update Adopter" })
                        </div>
                    </div>
                </div>
            </div>


        }

