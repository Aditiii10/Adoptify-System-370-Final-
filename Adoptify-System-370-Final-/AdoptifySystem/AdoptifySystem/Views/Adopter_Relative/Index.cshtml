                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adopter.Adopter_Name)
                </td>
                <td>
                    @Html.ActionLink("Update", "Edit", "Adopter_Relative", new { id = item.Relative_ID }, new { @class = "btn btn-success", @Title = "Click to Update Adopter Relative" })
                    @Html.ActionLink("Delete", "Delete", "Adopter_Relative", new { id = item.Relative_ID }, new { @class = "btn btn-danger", @Title = "Click to Delete Adopter Relative" })
                    <button class="btn btn-info" title="Select to Display Details" data-toggle="modal" data-target="#@item.Relative_ID">More info </button>
                </td>
            </tr>


            <div class="modal fade" id="@item.Relative_ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
